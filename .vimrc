" disable swap files
set nobackup
set noswapfile

set tabstop=2
set softtabstop=2
set shiftwidth=2
set shiftround
set expandtab

" search settings
set hlsearch
set ignorecase
set smartcase

" main color scheme
set background=dark
"set base16colorspace=256
set t_Co=256 
syntax on
colorscheme slate

" line numbers
set number

"set wrap
set textwidth=200
"set colorcolumn=80
